{
  "name": "screeps-automation",
  "version": "1.0.0",
  "description": "A Screeps project focused on automating gameplay with high-quality code and strategies.",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "deploy": "yarn build && rollup -c",
    "deploy:sim": "yarn build && rollup -c --environment SERVER:sim",
    "start": "yarn build && node dist/main.js"
  },
  "dependencies": {
    "screeps-api": "^1.0.0"
  },
  "devDependencies": {
    "@types/screeps": "^3.3.8",
    "typescript": "^4.9.5",
    "rollup": "^2.79.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-screeps": "^1.0.1",
    "rollup-plugin-typescript2": "^0.34.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/screeps-automation.git"
  },
  "author": "Your Name",
  "license": "MIT"
}